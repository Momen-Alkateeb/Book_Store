@model RegisterVm

@{
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <!-- Header Section Matching Navbar -->
    <div class="register-header bg-primary text-white py-3">
        <div class="container">
            <div class="text-center">
                <h2 class="mb-1">Welcome to <strong>BookStore</strong></h2>
                <p class="mb-0">Join our community of book lovers</p>
            </div>
        </div>
    </div>

  
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white">
                        <h3 class="text-center mb-0 py-2">Create Account</h3>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="SaveRegister" asp-controller = "Account" novalidate>
                            <div class="text-danger" asp-validation-summary="All"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating">
                                        <input asp-for="Name" class="form-control" placeholder="First Name" required />
                                        <label asp-for="Name"></label>
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>
                                </div>
                             
                            </div>

                            <div class="mb-3">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="Email" required type="email" />
                                    <label asp-for="Email">Email Address</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-floating">
                                    <input asp-for="Address" class="form-control" placeholder="Address" required />
                                    <label asp-for="Address">Street Address</label>
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-floating">
                                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                                    <label asp-for="Password">Password</label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="form-floating">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary py-2">
                                    <i class="bi bi-person-plus me-2"></i> Register
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small">
                            Already have an account? <a asp-action="Login" class="text-decoration-none">Sign In</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <style>
        .register-container {
            padding-top: 1rem;
            background-color: #f8f9fa;
            min-height: calc(100vh - 56px - 72px); /* Account for navbar and footer */
        }

        .register-header {
            margin-bottom: 2rem;
        }

        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .form-control {
            border-radius: 0.25rem;
            padding: 0.75rem;
        }

        .form-floating > label {
            padding: 0.75rem;
        }

        .btn-primary {
            font-weight: 500;
            transition: all 0.2s;
        }

            .btn-primary:hover {
                opacity: 0.9;
                transform: translateY(-1px);
            }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #eee;
        }
    </style>
}

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   
}