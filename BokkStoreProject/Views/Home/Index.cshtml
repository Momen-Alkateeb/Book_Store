@model List<Product>

<div class="container py-3">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h2 class="text-primary mb-0">
                <i class="bi bi-box-seam me-2"></i> Our Products
            </h2>
            <p class="text-muted mb-0 small">Browse our collection</p>
        </div>
        <div class="col-md-6 text-end">
            <form asp-controller="Home" asp-action="index" >
                <div class="input-group" style="max-width: 250px; margin-left: auto;">
                    <input type="text" name="Title" class="form-control rounded-pill"
                           placeholder="Search..." >
                    <button class="btn btn-primary rounded-pill" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <div class="card h-100 border-0 shadow-sm rounded-3 overflow-hidden product-card">
                    <div class="product-image-container position-relative overflow-hidden" style="height: 120px;">
                        <img src="@item.URL" onerror="this.onerror=null;this.src='/images/default.jpg';"
                             alt="@item.Title"
                             class="img-fluid w-100 h-100 object-fit-cover">
                        <div class="badge bg-primary position-absolute top-0 end-0 m-1">$@item.Price.ToString("0.00")</div>
                    </div>
                    <div class="card-body p-2">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <h6 class="card-title mb-0 small" style="line-height: 1.2;">@item.Title</h6>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-primary rounded-1 details-btn">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <span class="text-danger small fw-bold">$@item.Price.ToString("0.00")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center mt-3">
        <nav>
            <ul class="pagination pagination-sm">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <style>
        .product-card {
            transition: all 0.2s ease;
            font-size: 0.85rem;
            margin-bottom: 1rem; /* Added for extra spacing */
        }

            .product-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .product-image-container {
            background-color: #f8f9fa;
        }

        .card-title {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.85rem;
        }

        .details-btn {
            padding: 0.15rem 0.4rem;
            border-width: 1px;
            transition: all 0.2s ease;
            color: #6c757d; /* Gray text */
            border-color: #dee2e6; /* Light gray border */
        }

            .details-btn:hover {
                background-color: #f8f9fa; /* Light gray background */
                color: #495057; /* Dark gray text */
                transform: scale(1.1);
                border-color: #adb5bd; /* Medium gray border */
            }

        .page-item .page-link {
            color: #6c757d; /* Gray text */
            border: 1px solid #dee2e6; /* Light gray border */
            transition: all 0.2s ease;
        }

        .page-item.active .page-link {
            background-color: #6c757d; /* Gray background */
            border-color: #6c757d; /* Gray border */
            color: white;
        }

        .page-item:not(.active) .page-link:hover {
            background-color: #f8f9fa; /* Light gray background */
            color: #495057; /* Dark gray text */
            border-color: #adb5bd; /* Medium gray border */
        }

        .badge {
            font-size: 0.65rem;
            padding: 0.25em 0.4em;
        }
   
   
        .product-card {
            transition: all 0.2s ease;
            font-size: 0.85rem;
        }
       
    </style>




}
   
