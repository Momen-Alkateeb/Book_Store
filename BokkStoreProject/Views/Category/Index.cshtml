@model List<Category>
<partial name="_NotificationPartial" />

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="bi bi-tag me-2"></i>Category List
        </h2>
        <a asp-controller="Category" asp-action="AddNewData" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add New Category
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Category Name</th>
                            <th>Display Order</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(c => c.Id))
                        {
                            <tr>
                                <td class="ps-4 fw-semibold">#@item.Id</td>
                                <td class="fw-medium">@item.Name</td>
                                <td>@item.DsiplayOrder</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="UpdateData" asp-controller="Category" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary"
                                           title="Edit" data-bs-toggle="tooltip">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="DeleteData" asp-controller="Category" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Delete" data-bs-toggle="tooltip">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        $(document).ready(function(){
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}